<%- include("./../../partials/navbar.ejs") %>
<main class="main">
  <h1 class="heading">ADD CUSTOMER</h1>

  <div class="customerForm newForm">
    <%- include("../../partials/messages.ejs") %>
    <form
      action="/admin/dashboard/<%= user.role %>/<%= user._id %>/newCustomer"
      method="post"
    >
      <div class="my-3">
        <label class="form-label">Picture</label>
        <input type="file" name="cover" class="filepond" />
      </div>
      <div class="my-3">
        <label class="form-label">First Name</label>
        <input type="text" class="form-control" name="firstName" />
      </div>
      <div class="my-3s">
        <label class="form-label">Last Name</label>
        <input type="text" class="form-control" name="lastName" />
      </div>
      <div class="my-3">
        <label class="form-label">Phone</label>
        <input type="text" class="form-control" name="phone" />
      </div>
      <div class="my-3">
        <label class="form-label">Whatsapp</label>
        <input type="text" class="form-control" name="whatsapp" />
      </div>
      <div class="my-3">
        <label class="form-label">Company</label>
        <input
          type="text"
          value="No Company"
          class="form-control"
          name="company"
        />
      </div>
      <div class="my-3">
        <label class="form-label">Date of Birth</label>
        <input type="date" class="form-control" name="dob" />
      </div>
      <div class="my-3">
        <label class="form-label">Gender</label>
        <select name="gender" class="form-control">
          <option value="male">Male</option>
          <option value="female">Female</option>
        </select>
      </div>
      <hr />
      <div class="my-3">
        <label class="form-label">License Class</label>
        <select name="lClass" class="form-control">
          <option value="A">A</option>
          <option value="B">B</option>
        </select>
      </div>
      <div class="my-3">
        <label class="form-label">License No.</label>
        <input type="text" class="form-control" name="lNo" />
      </div>
      <div class="my-3">
        <label class="form-label">Reference No.</label>
        <input type="text" class="form-control" name="refNo" />
      </div>
      <div class="my-3">
        <label class="form-label">Issue Date</label>
        <input
          type="date"
          class="form-control"
          name="issueDate"
          id="issueDate"
        />
      </div>
      <div class="my-3">
        <label class="form-label">License Renewal One</label>
        <input
          type="date"
          class="form-control"
          name="lRenewOne"
          id="lRenewOne"
        />
      </div>
      <div class="my-3">
        <label class="form-label">License Renewal Two</label>
        <input
          type="date"
          class="form-control"
          name="lRenewTwo"
          id="lRenewTwo"
        />
      </div>
      <div class="my-3">
        <label class="form-label">License Expires on</label>
        <input type="date" class="form-control" name="lExpiry" id="lExpiry" />
      </div>

      <button type="submit" class="w-100 btn btn-secondary">
        Add Customer
      </button>
    </form>
  </div>
</main>
